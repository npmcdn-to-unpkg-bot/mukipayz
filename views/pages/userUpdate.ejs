<!DOCTYPE html>
<html lang="en">

    <head>
        <% include ../partials/head %>
    </head>

    <body class="container">

        <header>
            <% include ../partials/header %>
        </header>

        <div class="row">

            <div class="col-md-12">

                <h4 class="text-center">Update Your Information</h4>
                <form action='/home/userUpdate?_method=put' method='post' data-toggle="validator">
                    <fieldset class="form-group">
                        <label for="firstName" class="control-label">First Name</label>
                        <input name="first_name" type="text" class="form-control" id="firstName" value="<%= data.first_name %>" required>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="lastName" class="control-label">Last Name</label>
                        <input name="last_name" type="text" class="form-control" id="lastName" value="<%= data.last_name %>" required>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="email" class="control-label">Email</label>
                        <input type="email" class="form-control" id="email" value="<%= data.email %>" data-error="That email address is invalid" required>
                        <div class="help-block with-errors"></div>
                    </fieldset>

                    <fieldset class="form-group">
                        <input type="email" class="form-control" name="confirm_email" id="confirm_email" data-match="#email" data-match-error="Whoops, these don't match" placeholder="Confirm your email" required>
                        <div class="help-block with-errors"></div>
                    </fieldset>

                    <div class="form-group">
                        <label for="password" class="control-label">Password</label>
                        <div class="form-group">
                            <input type="password" name="password" data-minlength="6" data-error="Your password is not at least 6 characters long" class="form-control" id="password" placeholder="Enter Password" required>
                            <div class="help-block">Minimum of 6 characters</div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="inputPasswordConfirm" data-match="#password" data-match-error="Whoops, these don't match" placeholder="Confirm Password" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Update info!</button>
                </div>
            </form>
        </div>

    </div>
    <%- include('../partials/footer') %>
    <%- include('../partials/ejsEnd') %>
