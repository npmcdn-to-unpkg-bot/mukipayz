<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
    </head>
    <body>
        <%- include('../partials/navbar')%>
        <main class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <!-- <div class="jumbotron"> -->
                    <h4>Create a New Bill</h4>
                    <form data-toggle="validator" role="form" action="/home/group/<%= group.id %>/bills/new" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title" class="control-label">Bill Name</label>
                            <input type="text" name="title" placeholder="Bill Title" class="form-control" id="title">
                        </div>
                        <div class="form-group">
                            <label for="amount" class="control-label">Amount</label>
                            <input type="text" name="amount" class="form-control" id="amount" placeholder="Enter Total Amount to Split">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="image">Add an Image
                            </label>
                            <input type="file" name="files" id="image" accept="image/*">
                        </div>
                        <button class="btn btn-primary" type="submit">Create Bill</button>
                    </form>
                </div>

            </div>
        </main>
        <%- include('../partials/ejsEnd') %>
